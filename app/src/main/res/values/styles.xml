<?xml version="1.0" encoding="utf-8"?>
<resources
    >
    <style name="AboutDialogStyle" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <!-- Цвет окна или xml-фон диалогового окна -->
        <item name="android:windowBackground">@drawable/dialog_background</item>
        <!-- Стили кнопок -->
        <item name="buttonBarPositiveButtonStyle">@style/About.Button.Positive</item>
        <item name="buttonBarNegativeButtonStyle">@style/About.Button.Negative</item>
        <item name="buttonBarNeutralButtonStyle">@style/About.Button.Negative</item>
        <!-- Стили текста -->
        <item name="android:textSize">16sp</item>
        <item name="android:textColorPrimary">?attr/colorOnSurface</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textColorLink">?attr/colorOnPrimaryContainer</item>
        <item name="android:textColorHighlight">?attr/colorPrimaryContainer</item>

    </style>
    <style name="About.Button.Positive" parent="Widget.MaterialComponents.Button.TextButton">
        <!-- Цвет кнопки -->
        <item name="backgroundTint">?attr/colorSurfaceContainer</item>
        <!-- Цвет текста кнопки -->
        <item name="android:textColor">?attr/colorOnPrimaryContainer</item>
        <!-- Цвет эффекта нажатия кнопки -->
        <item name="rippleColor">?attr/colorOnPrimaryContainer</item>
        <!-- Все названия кнопок сделать заглавными буквами -->
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="About.Button.Negative" parent="Widget.MaterialComponents.Button.TextButton">
        <!-- Цвет кнопки -->
        <item name="backgroundTint">?attr/colorSurfaceContainer</item>
        <!-- Цвет текста кнопки -->
        <item name="android:textColor">?attr/colorOnPrimaryContainer</item>
        <!-- Цвет эффекта нажатия кнопки -->
        <item name="rippleColor">?attr/colorOnPrimaryContainer</item>
        <!-- Все названия кнопок не делать заглавными буквами -->
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ShapeAppearance.App.Corner.Medium" parent="ShapeAppearance.Material3.Corner.Medium">
        <!-- Цвет поля выбора цвета метки в карточке контакта -->
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>
</resources>