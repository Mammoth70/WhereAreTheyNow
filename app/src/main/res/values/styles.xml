<?xml version="1.0" encoding="utf-8"?>
<resources
    >
    <style name="AboutDialogStyle" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <!-- Цвет окна или xml-фон диалогового окна -->
        <item name="android:windowBackground">@drawable/dialog_background</item>
        <!-- Стили кнопок -->
        <item name="buttonBarPositiveButtonStyle">@style/About.Button.Positive</item>
        <item name="buttonBarNegativeButtonStyle">@style/About.Button.Negative</item>
        <item name="buttonBarNeutralButtonStyle">@style/About.Button.Negative</item>
        <!-- Стили текста -->
        <item name="android:textSize">16sp</item>
        <item name="android:textColorPrimary">?attr/colorOnSurface</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textColorLink">?attr/colorOnPrimaryContainer</item>
        <item name="android:textColorHighlight">?attr/colorPrimaryContainer</item>

    </style>
    <style name="About.Button.Positive" parent="Widget.MaterialComponents.Button.TextButton">
        <!-- Цвет кнопки -->
        <item name="backgroundTint">?attr/colorSurfaceContainer</item>
        <!-- Цвет текста кнопки -->
        <item name="android:textColor">?attr/colorOnPrimaryContainer</item>
        <!-- Цвет эффекта нажатия кнопки -->
        <item name="rippleColor">?attr/colorOnPrimaryContainer</item>
        <!-- Все названия кнопок сделать заглавными буквами -->
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="About.Button.Negative" parent="Widget.MaterialComponents.Button.TextButton">
        <!-- Цвет кнопки -->
        <item name="backgroundTint">?attr/colorSurfaceContainer</item>
        <!-- Цвет текста кнопки -->
        <item name="android:textColor">?attr/colorOnPrimaryContainer</item>
        <!-- Цвет эффекта нажатия кнопки -->
        <item name="rippleColor">?attr/colorOnPrimaryContainer</item>
        <!-- Все названия кнопок не делать заглавными буквами -->
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ShapeAppearance.App.Corner.Medium" parent="ShapeAppearance.Material3.Corner.Medium">
        <!-- Стиль формы метки в карточке контакта -->
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>

    <style name="Widget.App.CardView.Decorative" parent="@style/Widget.Material3.CardView.Outlined">
        <!-- Стиль не первого и не последнего элемента для RecyclerView в TextActivity -->
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.Decorative</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <style name="Widget.App.CardView.Decorative.Title" parent="@style/Widget.Material3.CardView.Filled">
        <!-- Стиль не первого и не последнего элемента для RecyclerView в TextActivity -->
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.Decorative.Title</item>
    </style>

    <style name="Widget.App.CardView.Decorative.First" parent="@style/Widget.Material3.CardView.Outlined">
        <!-- Стиль первого элемента для RecyclerView в TextActivity -->
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.Decorative.First</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <style name="Widget.App.CardView.Decorative.Last" parent="@style/Widget.Material3.CardView.Outlined">
        <!-- Стиль последнего элемента для RecyclerView в TextActivity -->
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.Decorative.Last</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.Decorative" parent="">
        <!-- Стиль формы не первого и не послдеднего элемента для RecyclerView в TextActivity -->
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">0dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.Decorative.Title" parent="">
        <!-- Стиль формы не первого и не послдеднего элемента для RecyclerView в TextActivity -->
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.Decorative.First" parent="">
        <!-- Стиль формы первого элемента для RecyclerView в TextActivity -->
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerFamilyBottomLeft">cut</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerFamilyBottomRight">cut</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.Decorative.Last" parent="">
        <!-- Стиль формы последнего элемента для RecyclerView в TextActivity -->
        <item name="cornerFamilyTopLeft">cut</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerFamilyTopRight">cut</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerSizeBottomLeft">16dp</item>
        <item name="cornerFamilyBottomRight">rounded</item>
        <item name="cornerSizeBottomRight">16dp</item>
    </style>
</resources>