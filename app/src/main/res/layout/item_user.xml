<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemUserLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    >
    <TextView
        android:id="@+id/itemUserLabel"
        android:background="@drawable/ic_pin_empty"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:gravity="bottom|center_horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:layout_width="12dp"
        android:layout_height="12dp"
        app:layout_constraintStart_toStartOf="@+id/itemUserLabel"
        app:layout_constraintTop_toBottomOf="@+id/itemUserLabel"
        />
    <TextView
        android:id="@+id/itemUserName"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toEndOf="@+id/itemUserLabel"
        app:layout_constraintTop_toTopOf="@+id/itemUserLabel"
        />
    <TextView
        android:id="@+id/itemUserPhone"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/itemUserName"
        app:layout_constraintTop_toBottomOf="@+id/itemUserName"
        />
</androidx.constraintlayout.widget.ConstraintLayout>