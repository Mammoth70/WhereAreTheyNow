<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemUserLayout"
    android:layout_width="match_parent"
    android:layout_height="88dp"
    android:orientation="horizontal"
    >
    <TextView
        android:id="@+id/itemUserLabel"
        android:background="@drawable/ic_pin_empty"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:gravity="bottom|center_horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/itemUserName"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toEndOf="@+id/itemUserLabel"
        app:layout_constraintTop_toTopOf="@+id/itemUserLabel"
        />
    <TextView
        android:id="@+id/itemUserPhone"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="@+id/itemUserName"
        app:layout_constraintTop_toBottomOf="@+id/itemUserName"
        />
    <Button
        style="?attr/materialIconButtonStyle"
        android:visibility="gone"
        android:enabled="false"
        android:id="@+id/btnUserSelf"
        app:iconTint="?attr/colorOnSurface"
        app:icon="@drawable/ic_action_self"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="52dp"
        android:contentDescription="@string/self"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <Button
        style="?attr/materialIconButtonStyle"
        android:id="@+id/btnUserMenu"
        app:iconTint="?attr/colorOnSurface"
        app:icon="@drawable/ic_action_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:contentDescription="@string/menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>