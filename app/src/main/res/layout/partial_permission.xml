<?xml version="1.0" encoding="utf-8"?>
<!-- Скроллируемая часть с кнопками и описаниями для PermissionsActivity. -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Разрешения местоположения. -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="136dp">

            <TextView
                android:id="@+id/tvCoarseLocation1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:text="@string/denied1"
                android:textColor="?attr/colorError"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tvCoarseLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/access_coarse_location"
                android:textColor="?attr/colorError"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="@+id/tvCoarseLocation1"
                app:layout_constraintStart_toEndOf="@+id/tvCoarseLocation1" />

            <TextView
                android:id="@+id/tvFineLocation1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/denied1"
                android:textColor="?attr/colorError"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@+id/tvCoarseLocation1"
                app:layout_constraintStart_toStartOf="@+id/tvCoarseLocation1" />

            <TextView
                android:id="@+id/tvFineLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/access_fine_location"
                android:contentDescription="@string/request_fine_location"
                android:textColor="?attr/colorError"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="@+id/tvFineLocation1"
                app:layout_constraintStart_toStartOf="@+id/tvCoarseLocation" />

            <Button
                style="?attr/materialButtonTonalStyle"
                android:id="@+id/btnLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:text="@string/request"
                android:contentDescription="@string/request_background_location"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@+id/tvFineLocation"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Разрешения работы в фоновом режиме. -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="124dp">

            <TextView
                android:id="@+id/tvBackgroundLocation1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:text="@string/denied1"
                android:textColor="?attr/colorError"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tvBackgroundLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/access_background_location"
                android:textColor="?attr/colorError"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="@+id/tvBackgroundLocation1"
                app:layout_constraintStart_toEndOf="@+id/tvBackgroundLocation1" />

            <TextView
                android:id="@+id/tvAnyMode"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/access_any_mode"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@+id/tvBackgroundLocation"
                app:layout_constraintStart_toStartOf="@+id/tvBackgroundLocation" />

            <Button
                style="?attr/materialButtonTonalStyle"
                android:id="@+id/btnBackgroundLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:text="@string/request"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@+id/tvAnyMode"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Разрешения SMS. -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="136dp">

            <TextView
                android:id="@+id/tvReceiveSMS1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:text="@string/denied1"
                android:textColor="?attr/colorError"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tvReceiveSMS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/access_Receive_SMS"
                android:textColor="?attr/colorError"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="@+id/tvReceiveSMS1"
                app:layout_constraintStart_toEndOf="@+id/tvReceiveSMS1" />

            <TextView
                android:id="@+id/tvSendSMS1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/denied1"
                android:textColor="?attr/colorError"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@+id/tvReceiveSMS1"
                app:layout_constraintStart_toStartOf="@+id/tvReceiveSMS1" />

            <TextView
                android:id="@+id/tvSendSMS"
                android:layout_marginStart="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/access_Send_SMS"
                android:textColor="?attr/colorError"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="@+id/tvSendSMS1"
                app:layout_constraintStart_toEndOf="@+id/tvSendSMS1" />

            <Button
                style="?attr/materialButtonTonalStyle"
                android:id="@+id/btnSMS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="16dp"
                android:text="@string/request"
                android:contentDescription="@string/request_SMS"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@+id/tvSendSMS"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Разрешения уведомлений. -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardNotifications"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <TextView
                android:id="@+id/tvNotifications1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:text="@string/denied1"
                android:textColor="?attr/colorError"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tvNotifications"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/access_notifications"
                android:textColor="?attr/colorError"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="@+id/tvNotifications1"
                app:layout_constraintStart_toEndOf="@+id/tvNotifications1" />

            <Button
                style="?attr/materialButtonTonalStyle"
                android:id="@+id/btnNotifications"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:text="@string/request"
                android:contentDescription="@string/request_notifications"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@+id/tvNotifications"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>